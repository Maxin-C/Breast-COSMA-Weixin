<view class="container">
  <view class="title-wrapper">
    <text class="title">视频转文字工具</text>
    <text class="subtitle">点击下方按钮，上传视频文件</text>
  </view>

  <button 
    wx:if="{{!tempFilePath}}" 
    type="primary" 
    bindtap="chooseVideo" 
    class="upload-btn">
    <image src="/images/upload-icon.png" class="btn-icon"></image>
    选择视频
  </button>

  <view wx:if="{{tempFilePath}}" class="video-preview-wrapper">
    <video 
      id="myVideo" 
      class="video-preview" 
      src="{{tempFilePath}}" 
      controls="{{false}}" 
      autoplay="{{false}}"></video>
    <view class="re-choose-btn" bindtap="chooseVideo">重新选择</view>
  </view>

  <view wx:if="{{isLoading}}" class="loading-wrapper">
    <loading class="loading-icon" type="circle"></loading>
    <text class="loading-text">正在识别中，请稍候...</text>
  </view>

  <view wx:if="{{resultText}}" class="result-wrapper">
    <view class="result-title">识别结果：</view>
    <text class="result-content" user-select="{{true}}">{{resultText}}</text>
    <button class="copy-btn" bindtap="copyText">复制文本</button>
  </view>

</view>