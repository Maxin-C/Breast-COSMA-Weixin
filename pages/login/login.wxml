<view class="container">
  <view class="logo-container">
    <image class="logo-image" src="../../components/images/login-icon.png" mode="aspectFit"></image>
  </view>

  <view class="text-section">
    <text class="title">乳腺癌术后智能康复助手</text>
    <text class="slogan">浙江大学邵逸夫医院 x 浙江大学生仪学院</text>
  </view>

  <view class="input-group">
    <text class="input-label">用户名 *</text>
    <view class="input-box">
      <input
        class="input-field"
        type="text"
        placeholder="请输入您的姓名"
        placeholder-style="color: #999;"
        bindinput="handleUsernameInput"
      />
    </view>
  </view>

  <view class="input-group">
    <text class="input-label">每日锻炼提醒时间</text>
    <view class="input-box">
      <picker mode="time" class="time-picker" value="{{reminderTime}}" bindchange="onTimeChange">
        <view class="picker-content">
          <text>{{reminderTime}}</text>
          <text class="picker-arrow">›</text>
        </view>
      </picker>
    </view>
  </view>

  <view class="button-container">
    <button class="login-btn" bindtap="handleLogin">登录</button>
  </view>

  <view class="signup-section">
    <text class="new-member-text">第一次加入项目?</text>
    <text class="signup-link" bindtap="handleSignUp">点击注册</text>
  </view>

  <view class="modal-mask" wx:if="{{ showStatusModal }}">
    <view class="modal-container">
      <view class="modal-title">请更新引流管状态</view>
      <view class="modal-content">
        <radio-group class="radio-group-modal" bindchange="onExtubationChange">
          <label class="radio-item"><radio value="未拔管" checked="true"/> 未拔管</label>
          <label class="radio-item"><radio value="已拔管" /> 已拔管</label>
        </radio-group>
      </view>
      <view class="modal-actions">
        <button class="action-btn confirm-btn" bindtap="onConfirmStatusUpdate">确认</button>
      </view>
    </view>
  </view>

  </view>