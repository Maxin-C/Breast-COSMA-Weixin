/* login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 60rpx;
  box-sizing: border-box;
  background-color: #f7f7f7;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* Logo */
.logo-container {
  margin-top: 70px;
  width: 250rpx;
  height: 250rpx;
  margin-bottom: 40rpx;
}

.logo-image {
  width: 100%;
  height: 100%;
}

/* Text section */
.text-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 56rpx;
  color: #000000;
  font-weight: bold;
  line-height: 1.2;
}

.slogan {
  font-size: 28rpx;
  color: #666666;
  margin-top: 15rpx;
}

/* Input groups */
.input-group {
  width: 100%;
  margin-bottom: 50rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333333;
  margin-left: 2px;
  margin-bottom: 15rpx;
  display: block;
  font-weight: bold;
}

.input-box {
  display: flex;
  align-items: center;
  background-color: #ececec;
  border-radius: 12rpx;
  padding: 0 30rpx;
  height: 100rpx;
  position: relative;
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #000;
  padding-right: 80rpx; /* Space for the icon */
}

.icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
}

/* Button */
.button-container {
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background-color: #d8f1c3; /* Light green background */
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
  border: none;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* Sign up section */
.signup-section {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  width: 100%;
  margin-top: auto; /* Push to the bottom */
}

.new-member-text {
  color: #333333;
  margin-right: 15rpx;
}

.signup-link {
  color: #000000;
  font-weight: bold;
  text-decoration: underline;
}

/* Modal styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-container {
  background-color: #fff;
  width: 80%;
  border-radius: 16rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.modal-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center; /* 确保文字居中 */
}

/* --- 新增：弹窗内的单选框样式 --- */
.radio-group-modal {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  font-size: 30rpx; /* 调整字体大小使其更清晰 */
}

.modal-actions {
  display: flex;
  justify-content: space-between; /* 两个按钮时 */
}

/* 当只有一个按钮时，让它居中 */
.modal-actions .confirm-btn:only-child {
  flex: 1;
  margin: 0 40rpx; /* 左右留些边距 */
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  font-size: 30rpx;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #333;
}

.confirm-btn {
  background-color: #d8f1c3; 
  color: #333;
}