/* index.wxss */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f0f0f0;
}

.camera-wrapper {
  position: relative;
  flex: 1;
  width: 100%;
}

.camera-view {
  width: 100%;
  height: 100%;
}

.status-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-label {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

.controls-container {
  padding: 40rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e0e0e0;
}

.active-controls {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.btn-control {
  width: 45%;
  margin: 0;
}

.btn-start {
  width: 100%;
}