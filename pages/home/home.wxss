/* home.wxss */
page {
  background-color: #f7f7f7; /* 设置一个浅灰色背景，突出卡片 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column; /* 垂直排列子元素 */
  box-sizing: border-box; /* 防止 padding 影响高度计算 */
  padding: 20px 15px;
  padding-bottom: 80px; /* 为底部导航栏留出空间 */
}

.main-content-scroll {
  flex-grow: 1; /* 让这个区域占据所有剩余的垂直空间 */
  overflow-y: auto; /* 自动显示垂直滚动条 */
  /* 为了美观，可以隐藏滚动条本身（在支持的设备上） */
}

/* 顶栏 */
.header {
  margin-top: 50px;
  margin-left: -170px;
  margin-bottom: 20px;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
    content: '';
    position: absolute;
    width: 50px;
    height: 50px;
    margin-left: -60px;
    border-radius: 100%;
    background-color: #333;
    transform-origin: center;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.welcome-text .title {
  font-size: 18px;
  color: #555;
}

.welcome-text .username {
  font-size: 24px;
  font-weight: bold;
  color: #000;
}

/* 通用卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 8px;
  margin-bottom: 20px;
  border: 1px solid #d3d3d3;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

/* 进度卡片 */
.progress-card {
  padding: 15px;
  background-color: #f0f0f0;
  border: 1px solid #dcdcdc;
  flex-shrink: 0; /* 在 flex 布局中防止被压缩 */
  margin-bottom: 20px;
  width: 92%;
}

.progress-text {
  margin-bottom: 10px;
  font-size: 14px;
  color: #333;
}

.progress-text .percentage {
  font-size: 12px;
  color: #666;
  display: block;
  margin-top: 4px;
}

/* 功能卡片 */

.action-card {
  overflow: hidden; /* 防止图片溢出圆角 */
  /* width: 90%; */
}

.card-image{
  height: 200px;
  width: 100%;
}

.card-content {
  padding: 15px;
  background-color: #f8f8f8; /* 草图中的底部带阴影背景 */
  border-top: 1px solid #e0e0e0;
}

.card-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  display: block;
}

.card-subtitle {
  font-size: 14px;
  color: #777;
  display: block;
  margin-top: 4px;
}

/* 3. 自定义底部导航 */
.custom-tab-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  display: flex;
  justify-content: space-around;
  height: 50px;
  background-color: #EBF0E6;
  padding-top: 8px;
  padding-bottom: env(safe-area-inset-bottom);
}
.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 16px;
  color: #888;
}
.tab-item.active {
  color: #333;
}
.tab-icon {
  width: 30px;
  height: 30px;
  margin-bottom: 4px;
}